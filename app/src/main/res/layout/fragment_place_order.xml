<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/placeOrderConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:context="com.blogspot.android_er.androiddynamicview.MainActivity">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/Input_Item_Name"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:hint="Item"
                        android:inputType="text"
                        android:textAlignment="textStart" />

                    <AutoCompleteTextView
                        android:id="@+id/Input_Item_Quantity"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/Input_Item_Name"
                        android:hint="Quan"
                        android:inputType="number"
                        android:textAlignment="center"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="78dp" />

                    <AutoCompleteTextView
                        android:id="@+id/Input_Item_Price"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/Input_Item_Quantity"
                        android:hint="Price"
                        android:inputType="number"
                        android:textAlignment="center" />

                    <AutoCompleteTextView
                        android:id="@+id/Input_Item_Note"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/Input_Item_Price"
                        android:hint="Note"
                        android:inputType="text"
                        android:textAlignment="textStart" />

                    <Button
                        android:id="@+id/add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@android:drawable/ic_input_add" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/placeOrder_purchasingLocation_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="@string/place_order_purchasing_location"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

        <AutoCompleteTextView
            android:id="@+id/placeOrder_dropOffLocation_editText"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/place_order_drop_off_location"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/placeOrder_purchasingLocation_editText"
            app:layout_constraintTop_toBottomOf="@+id/placeOrder_purchasingLocation_editText" />

        <Button
            android:id="@+id/PlaceOrder_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/placeOrder_placeorder"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeOrder_serviceCharges_number" />

        <Spinner
            android:id="@+id/placeOrder_dateTimePicker_btn"
            android:layout_width="272dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@+id/placeOrder_dropOffLocation_editText"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@+id/placeOrder_dropOffLocation_editText"
            app:layout_constraintTop_toBottomOf="@+id/placeOrder_dropOffLocation_editText" />

        <EditText
            android:id="@+id/placeOrder_serviceCharges_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:hint="@string/charges"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/placeOrder_dateTimePicker_btn"
            app:layout_constraintStart_toStartOf="@+id/placeOrder_dateTimePicker_btn"
            app:layout_constraintTop_toBottomOf="@+id/placeOrder_dateTimePicker_btn" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>