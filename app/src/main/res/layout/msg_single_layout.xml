<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_single_rel_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/msg_single_profile_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/msg_single_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/msg_single_msg_txt"
        android:layout_alignTop="@+id/msg_single_profile_img"
        android:text="Display Name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/msg_single_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_single_name_txt"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/msg_single_profile_img"
        android:text="mesage"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/msg_single_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msg_single_name_txt"
        android:layout_alignTop="@+id/msg_single_name_txt"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/msg_single_name_txt"
        android:paddingTop="4dp"
        android:text="00:00"
        android:textSize="12sp" />
</RelativeLayout>