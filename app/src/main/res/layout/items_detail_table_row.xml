<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/items_details_itemName"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_gravity="fill"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/items_details_itemQuantity"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/items_details_itemName"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Items_details_itemPrice"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/items_details_itemQuantity"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/items_details_itemNote"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/Items_details_itemPrice"
        android:textAlignment="center"
        android:layout_gravity="fill"
        android:textStyle="bold" />

</RelativeLayout>